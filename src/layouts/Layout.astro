---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <nav class="w-full">
      <div class="container">
        <a href="/">Home</a>
        <a href="/about">About</a>

        <div
          class="w-12 h-12 rounded-full bg-white text-black flex items-center justify-center"
        >
          <div id="anotherCounter">0</div>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>
